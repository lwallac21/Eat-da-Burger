<div class="jumbotron">
<h1 class="title text-center">Eat-Da-Burger!</h1>

</div>
<div class="container">
    <div class="row">
        <div class="col">
            <h2 class="burger-name text-center">Burgers Available</h2>
            {{#each burgers}}
            {{#unless this.devoured}}
            <div class="container">
                <form action="/burgers/{{this.id}}?_method=PUT" method="POST" class="update-button">
                    {{this.burger_name}}
                    <button type="submit" class="btn btn-default" id="burger-ready">DEVOUR IT</button>
                </form>
            </div>
            {{/unless}}
            {{/each}}
        </div>        </div>
        <div class="col" id="">
            <h2 class="">Burgers Devoured</h2>
            {{#each burgers}}
            {{#if this.devoured}}
            <div class="">
                {{this.burger_name}}
            </div>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<form id="add-burger" action="/burgers" class="create-form" method="POST">
    <div class="form-group col-md-8">
        <input type="text" id="enter-burger" name="burger_name" class="form-control">
        <button type="submit" class="btn btn-default" id="submit-burger">ADD BURGER</button>
    </div>
</form>